    @if (showStory)
    {
        <MudGrid>
            <MudItem xs="12">
                <MudTextField ShrinkLabel AutoGrow Label="Backstory" @bind-Value="@Character.Backstory"/>
            </MudItem>
            <MudItem xs="12">
                <MudTextField ShrinkLabel AutoGrow Label="Allies & Organizations" @bind-Value="@Character.AlliesAndOrganizations"/>
            </MudItem>
        </MudGrid>
    }

    <br/>
}
</center>
</MudContainer>